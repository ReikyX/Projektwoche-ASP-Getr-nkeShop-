<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DrinkShop</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DrinkShop.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-gradient shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Products" asp-action="Index">
                    <i class="bi bi-cup-straw"></i> DrinkShop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Produkte</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Categories" asp-action="Index">Kategorien</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CartItems" asp-action="Index">Warenkorb</a></li>
                    </ul>

                    <!-- Suchleiste -->
                    <div class="d-flex position-relative me-3">
                        <input id="liveSearch" class="form-control form-control-sm me-2" type="search" placeholder="Suche..." aria-label="Suche" autocomplete="off">
                        <div id="searchResults" class="list-group position-absolute w-100" style="z-index: 1000;"></div>
                    </div>

                    <!-- Auth Buttons -->
                    <div class="d-flex">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form method="post" asp-controller="Account" asp-action="Logout" class="d-flex">
                                <button class="btn btn-outline-warning btn-sm" type="submit">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-light btn-sm me-2" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn btn-warning btn-sm" asp-controller="Account" asp-action="Register">Registrieren</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-fill">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-3 border-top mt-auto">
        <div class="container">
            &copy; 2025 DrinkShop • <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Datenschutz</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
